<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Tv_Serie_Name_Unique_Rule</fullName>
    <active>true</active>
    <description>Tv Serie must be unique</description>
    <errorConditionFormula>AND(CONTAINS(VLOOKUP( 
        $ObjectType.Tv_Serie__c.Fields.Name , 
        $ObjectType.Tv_Serie__c.Fields.Name, Name),Name), 
        OR(ISNEW(),ISCHANGED(Name)))</errorConditionFormula>
    <errorDisplayField>Name</errorDisplayField>
    <errorMessage>Tv Serie of this Name already exists.</errorMessage>
</ValidationRule>
